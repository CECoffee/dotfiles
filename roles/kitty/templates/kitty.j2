# Font
font_family      {{ font }}
bold_font        auto
italic_font      auto
bold_italic_font auto
font_size        10.0

# Cursor
cursor_shape beam

# Padding
window_padding_width 5 10

# Scrollback
scrollback_lines 10000

# Bell
enable_audio_bell yes

# Background
background #202020
background_opacity 0.9

# Black + DarkGrey
color0  #282a36
color8  #686868
# DarkRed + Red
color1  #ff5c57
color9  #ff5c57
# DarkGreen + Green
color2  #5af78e
color10 #5af78e
# DarkYellow + Yellow
color3  #f3f99d
color11 #f3f99d
# DarkBlue + Blue
color4  #57c7ff
color12 #57c7ff
# DarkMagenta + Magenta
color5  #ff6ac1
color13 #ff6ac1
# DarkCyan + Cyan (both
color6  #9aedfe
color14 #9aedfe
# LightGrey + White
color7  #eff0eb
color15 #f1f1f0

# Mappings
map ctrl+Up   change_font_size current +1.0
map ctrl+Down change_font_size current -1.0
