        strip_workspace_numbers yes
        status_command $HOME/.i3/conky-top.sh
        tray_output none
        #font xft: hack:size=2
        colors{
            background #202020
        }
}

bar {
        position bottom
        status_command $HOME/.i3/conky-bottom.sh
        workspace_buttons no
        colors{
            background #202020
        }
}
